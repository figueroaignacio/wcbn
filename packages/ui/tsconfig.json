{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true
  },
  "paths": {
    "@wcbn/ui": ["dist/"]
  },
  "include": ["src", "global.d.ts"],
  "exclude": ["node_modules", "dist"]
}
